{
    "version": 2,
    "builds": [
      {
        "src": "frontend/**",
        "use": "@vercel/static"
      },
      {
        "src": "api/analyze.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "50mb",
          "includeFiles": [
            "backend/**",
            "api/**"
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/analyze",
        "dest": "/api/analyze.py",
        "methods": ["POST"]
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1",
        "methods": ["GET"]
      }
    ],
    "functions": {
      "api/analyze.py": {
        "memory": 3008,
        "maxDuration": 30,
        "runtime": "python3.9"
      }
    }
  }