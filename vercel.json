{
    "version": 2,
    "builds": [
      {
        "src": "frontend/**",
        "use": "@vercel/static"
      },
      {
        "src": "api/analyze.py",
        "use": "@vercel/python",
        "config": { 
          "maxLambdaSize": "15mb",
          "includeFiles": ["pybit.py", "pyinstxtractor.py"]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1",
        "methods": ["POST", "OPTIONS"]
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1"
      }
    ],
    "functions": {
      "api/analyze.py": {
        "memory": 3008,
        "maxDuration": 30,
        "runtime": "python@3.9"
      }
    },
    "headers": [
      {
        "source": "/api/(.*)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "POST, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/analyze",
        "destination": "/api/analyze.py"
      }
    ],
    "env": {
      "PYTHONPATH": "/var/task:/var/task/api"
    }
  }