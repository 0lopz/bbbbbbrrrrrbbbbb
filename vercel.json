{
    "version": 2,
    "builds": [
      {
        "src": "frontend/**",
        "use": "@vercel/static"
      },
      {
        "src": "api/analyze.py",
        "use": "@vercel/python",
        "config": {
          "includeFiles": ["backend/**"]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/analyze.py"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1",
        "methods": ["GET"]
      }
    ]
  }