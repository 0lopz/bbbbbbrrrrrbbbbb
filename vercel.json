{
    "version": 2,
    "builds": [
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        },
        {
            "src": "api/analyze.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "includeFiles": ["backend/**"]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/analyze",
            "dest": "/api/analyze.py",
            "methods": ["POST", "OPTIONS"]
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "functions": {
        "api/analyze.py": {
            "memory": 3008,
            "maxDuration": 30,
            "runtime": "python@3.9"
        }
    },
    "env": {
        "PYTHONPATH": "/var/task:/var/task/backend"
    }
}