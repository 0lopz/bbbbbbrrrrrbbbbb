{
  "version": 2,
  "builds": [
    {
      "src": "frontend/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/analyze.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",  
        "includeFiles": ["backend/**"],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/analyze",
      "dest": "/api/analyze.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}